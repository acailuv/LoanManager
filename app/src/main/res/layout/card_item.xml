<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_credit_card_big" />

        <TextView
            android:id="@+id/nickname"
            style="@style/h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@id/icon"
            android:text="Card Nickname" />

        <TextView
            android:id="@+id/cardholder"
            style="@style/p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nickname"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/icon"
            android:text="Cardholder" />

        <TextView
            android:id="@+id/issuing_bank"
            style="@style/p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nickname"
            android:layout_marginStart="@dimen/margin"
            android:layout_toEndOf="@id/cardholder"
            android:text="Issuing Bank" />

        <TextView
            android:id="@+id/variant"
            style="@style/p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nickname"
            android:layout_marginStart="@dimen/margin"
            android:layout_toEndOf="@id/issuing_bank"
            android:text="Variant" />

        <TextView
            android:id="@+id/grade"
            style="@style/p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nickname"
            android:layout_marginStart="@dimen/margin"
            android:layout_toEndOf="@id/variant"
            android:text="Grade" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>